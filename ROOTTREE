# cook your dish here
t=int(input())
for _ in range(t):
      n=int(input())
      arr=[]
      for i in range(n-1):
            a,b = map(int,input().split())
            arr.append(b)
      a = [0]*n
      for i in range(n):
            a[i]=i+1 
            c=0
      for i in range(n):
            if(a[i] not in arr):
                  c+=1 
      print(c-1)
